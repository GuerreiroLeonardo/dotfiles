[user]
	email = pradyunsg@gmail.com
	name = Pradyun

[alias]
	b = branch -v                 # branch with latest commit summary
	l = log --graph --date=short  # log
	r = remote -v                 # show remotes (verbose)
	s = status                    # status
	st = status                   # status

	amend = commit --amend        # amend your last commit
	co = checkout                 # checkout
	nb = checkout -b              # new branch

[apply]
	whitespace = error

[commit]
	template = /home/pradyun/.git-config/commit-template

[core]
	autocrlf = input
	editor = subl -w -n
	whitespace = trailing-space,tab-in-indent,cr-at-eol

[diff]
	algorithm = patience
	tool = xxdiff

[gui]
	editor = subl -w -n
	fontdiff = -family \"Source Code Pro\" -size -12 -weight normal -slant roman -underline 0 -overstrike 0
	historybrowser = gitg

[help]
	autocorrect = 20

[merge]
	tool = meld

[push]
	default = simple
